{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}

    <link rel="stylesheet" href="https://unpkg.com/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://unpkg.com/bs-brain@2.0.4/components/logins/login-10/assets/css/login-10.css">

    <section class="py-3 py-md-5 py-xl-8">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4" style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); padding: 20px; text-align: center;">

                    <div class="card border border-light-subtle rounded-4">
                        {{ form_start(form) }}
                        <div class="card-body p-3 p-md-4 p-xl-5">
                            <div class="row gy-3 overflow-hidden">

                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        {{ form_widget(form.email, {'attr': {'class': 'form-control', 'autocomplete': 'email'}}) }}
                                        <label for="email" class="form-label">Email</label>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                                        <label for="nom" class="form-label">Nom</label>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                                        <label for="prenom" class="form-label">Prénom</label>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        {{ form_widget(form.ville, {'attr': {'class': 'form-control'}}) }}
                                        <label for="ville" class="form-label">Ville</label>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        {{ form_widget(form.date_naissance, {'attr': {'class': 'form-control'}}) }}
                                        <label for="date_naissance" class="form-label">Date de naissance</label>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        {{ form_widget(form.password.first, {'attr': {'class': 'form-control'}}) }}
                                        <label for="password" class="form-label">Mot de passe</label>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        {{ form_widget(form.password.second, {'attr': {'class': 'form-control'}}) }}
                                        <label for="password_confirmation" class="form-label">Confirmer le mot de passe</label>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <button class="btn btn-lg btn-primary" type="submit">
                                        S'inscrire
                                    </button>
                                </div>

                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>

                    <div class="d-flex gap-2 gap-md-4 flex-column flex-md-row justify-content-md-center mt-4">
                        <a href="{{ path('app_login') }}" class="link-secondary text-decoration-none" style="color: white !important;">Déjà un compte ? Connectez-vous</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
