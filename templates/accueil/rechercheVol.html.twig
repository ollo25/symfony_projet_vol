{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}
{% block body %}
    <link rel="stylesheet" href="{{ asset('assets/css/rechercheVol.css') }}">

    <header data-jarallax data-speed=".8">
        <div class="d-flex flex-column bg-opacity-50 pt-10 pt-md-8 pb-7 pb-md-0">
            <div class="container my-auto">
                <div class="row justify-content-center">
                    <div class="white-box2">
                    {% if vols is not empty %}
                        <table class="table-vols">
                            <thead>
                            <tr>
                                <th>Ville de départ</th>
                                <th>Ville d'arrivée</th>
                                <th>Date de départ</th>
                                <th>Heure de départ</th>
                                <th>Prix</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for vol in vols %}
                                <tr>
                                    <td>{{ vol.villeDepart }}</td>
                                    <td>{{ vol.villeArrive }}</td>
                                    <td>{{ vol.dateDepart|date('d/m/Y') }}</td>
                                    <td>{{ vol.heureDepart|date('H:i') }}</td>
                                    <td>{{ vol.prixBilletInitiale }} €</td>
                                    <td>
                                        <a href="{{ path('reservation_create', {
                                            'ref_vol_id': vol.id,
                                            'prix_billet': vol.prixBilletInitiale
                                        }) }}" class="btn btn-success">Réserver</a>
                                    </td>

                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    {% else %}
                        <p class="text-center">Aucun vol trouvé.</p>
                    {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </header>
{% endblock %}