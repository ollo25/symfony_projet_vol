{% extends 'base.html.twig' %}

{% block title %}Conges index{% endblock %}

{% block body %}
    <h1>Conges index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DateDebut</th>
                <th>DateFin</th>
                <th>EstValide</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for conge in conges %}
            <tr>
                <td>{{ conge.id }}</td>
                <td>{{ conge.dateDebut ? conge.dateDebut|date('Y-m-d') : '' }}</td>
                <td>{{ conge.dateFin ? conge.dateFin|date('Y-m-d') : '' }}</td>
                <td>{{ conge.estValide ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_conges_show', {'id': conge.id}) }}">show</a>
                    <a href="{{ path('app_conges_edit', {'id': conge.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_conges_new') }}">Create new</a>
{% endblock %}
