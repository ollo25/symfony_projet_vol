{% extends 'base.html.twig' %}

{% block title %}New Utilisateur{% endblock %}

{% block body %}
    <div class="white-box">
        <h1 class="text-center">Nouvel Utilisateur</h1>
        {{ form_start(form) }}
        <table class="table">
            <tr>
                <th>{{ form_label(form.email) }}</th>
                <td>{{ form_widget(form.email) }}</td>
            </tr>
            <tr>
                <th>{{ form_label(form.roles) }}</th>
                <td>{{ form_widget(form.roles) }}</td>
            </tr>
            <tr>
                <th>{{ form_label(form.refModele) }}</th>
                <td>{{ form_widget(form.refModele) }}</td>
            </tr>
            <tr>
                <th>{{ form_label(form.nom) }}</th>
                <td>{{ form_widget(form.nom) }}</td>
            </tr>
            <tr>
                <th>{{ form_label(form.prenom) }}</th>
                <td>{{ form_widget(form.prenom) }}</td>
            </tr>
            <tr>
                <th>{{ form_label(form.ville) }}</th>
                <td>{{ form_widget(form.ville) }}</td>
            </tr>
            <tr>
                <th>{{ form_label(form.date_naissance) }}</th>
                <td>{{ form_widget(form.date_naissance) }}</td>
            </tr>
            <tr>
                <th>{{ form_label(form.password.first) }}</th>
                <td>{{ form_widget(form.password.first) }}</td>
            </tr>
            <tr>
                <th>{{ form_label(form.password.second) }}</th>
                <td>{{ form_widget(form.password.second) }}</td>
            </tr>
        </table>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">Créer</button>
        </div>
        {{ form_end(form) }}

        <div class="mt-3">
            <a href="{{ path('app_utilisateur_index') }}">← Retour à la liste</a>
        </div>
    </div>
{% endblock %}
