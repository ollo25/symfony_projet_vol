{% extends 'base.html.twig' %}

{% block title %}Vol{% endblock %}

{% block body %}
<div class="white-box">
    <h1 class="text-center">Information du Vol </h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ vol.id }}</td>
            </tr>
            <tr>
                <th>VilleDepart</th>
                <td>{{ vol.villeDepart }}</td>
            </tr>
            <tr>
                <th>VilleArrive</th>
                <td>{{ vol.villeArrive }}</td>
            </tr>
            <tr>
                <th>DateDepart</th>
                <td>{{ vol.dateDepart ? vol.dateDepart|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>HeureDepart</th>
                <td>{{ vol.heureDepart ? vol.heureDepart|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>PrixBilletInitiale</th>
                <td>{{ vol.prixBilletInitiale }}</td>
            </tr>
        </tbody>
    </table>
    {{ include('vol/_delete_form.html.twig') }}
    <br>
    <a href="{{ path('app_vol_edit', {'id': vol.id}) }}">Modifier</a>
    <br>
    <a href="{{ path('app_vol_index') }}">Retour Ã  la liste</a>




</div>
{% endblock %}
